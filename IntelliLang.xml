<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="DTD" injector-id="xml">
      <display-name>header</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("header")).withNamespace(string().equalTo("http://www.w3.org/1999/html"))]]></place>
    </injection>
    <injection language="CSS" injector-id="xml">
      <display-name>p/@class</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("class")).withParent(xmlTag().withLocalName(string().equalTo("p")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>